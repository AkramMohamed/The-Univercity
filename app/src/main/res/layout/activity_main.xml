<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/bg1">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="133dp"

        android:layout_height="128dp"
        android:src="@drawable/logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/directorLogin"
        android:layout_width="261dp"
        android:layout_height="96dp"
        android:layout_above="@+id/ListeningTeamLogin"
        android:layout_alignParentTop="true"
        android:background="@drawable/bgcolor1"
        android:text="DIRECTOR"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/ListeningTeamLogin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.931"></Button>

    <Button
        android:id="@+id/listeningTeamLogin"
        android:layout_width="140dp"
        android:layout_height="99dp"
        android:layout_alignParentStart="true"

        android:layout_alignParentBottom="true"

        android:layout_marginStart="5dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/bgcolor1"
        android:text="Listening Team"
        android:textSize="17dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/studentLogin"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.712"></Button>

    <Button
        android:id="@+id/studentLogin"
        android:layout_width="140dp"
        android:layout_height="99dp"
        android:layout_below="@+id/directorLogin"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"

        android:layout_marginStart="8dp"
        android:layout_marginEnd="5dp"
        android:layout_toEndOf="@+id/ListeningTeamLogin"
        android:background="@drawable/bgcolor1"

        android:text="STUDENT"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ListeningTeamLogin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.712"></Button>


</androidx.constraintlayout.widget.ConstraintLayout>