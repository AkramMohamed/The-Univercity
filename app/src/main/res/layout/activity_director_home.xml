<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DirectorHome">
    <TextView
        android:id="@+id/directorHomeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Director Home"
        android:layout_centerHorizontal="true"
        android:textSize="25sp"/>

    <Button
        android:id="@+id/accountsManagementButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Accounts       management"
        android:textSize="30sp"
        android:layout_below="@+id/directorHomeTitle"
        android:layout_marginVertical="50dp"
        android:paddingVertical="35dp"
        android:background="@drawable/bgcolor1"/>
    <Button
        android:id="@+id/informationManagementButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Informations management"
        android:textSize="30sp"
        android:layout_below="@+id/accountsManagementButton"
        android:paddingVertical="35dp"
        android:background="@drawable/bgcolor1"/>

</RelativeLayout>