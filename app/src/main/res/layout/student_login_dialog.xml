<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginVertical="25dp"

    android:background="@drawable/bgcolor2"

    >

    <TextView
        android:id="@+id/stdTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="STUDENT LOGIN"
        android:textColor="#610E0D0D"

        android:textSize="27dp"
        android:textStyle="bold"
        ></TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_below="@+id/stdTitle"
        android:minWidth="300dp"
        android:minHeight="300dp">

        <EditText
            android:id="@+id/stdUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:padding="3dp"
            android:hint="STUDENT Username"
            android:textColorHint="#57FFFFFF"
            android:autoSizeTextType="uniform"
            android:textColor="#fff"
            android:background="@drawable/bginput"
            android:gravity="center"
            android:layout_marginBottom="10dp"

            />
        <EditText
            android:id="@+id/stdPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:padding="3dp"
            android:hint="PASSWORD"
            android:textColor="#fff"
            android:background="@drawable/bginput"
            android:inputType="textPassword"
            android:textSize="20dp"
            android:gravity="center"
            android:textColorHint="#57FFFFFF"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:orientation="horizontal"
            >
            <Button
                android:id="@+id/studentLoginBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:text="LOGIN"
                android:textColor="#fff"
                android:background="@drawable/bgcolor3"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textSize="25dp"
                android:textStyle="bold"
                android:padding="15dp"
                />
            <Button
                android:id="@+id/studentBackBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:text="BACK"
                android:textColor="#fff"
                android:background="@drawable/bgcolor3"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textSize="25dp"
                android:textStyle="bold"
                android:padding="15dp"
                />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
